@model LoginUser
<h3 class="text-center">Login</h3>
<hr>

<form asp-controller="User" asp-action="Login">
    <div class="mb-3">
        <label asp-for="LoginEmail"></label>
        <span
            asp-validation-for="LoginEmail"
            class="text-danger font-weight-bold">
        </span>
        <input asp-for="LoginEmail" class="form-control"> 
    </div>

    <div class="mb-3">
        <label asp-for="LoginPassword"></label>
        <span
            asp-validation-for="LoginPassword"
            class="text-danger font-weight-bold">
        </span>
        <input asp-for="LoginPassword" class="form-control"> 
    </div>
    <button class="btn btn-outline-primary">Login</button>
</form>